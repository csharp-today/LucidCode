<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version Condition=" '$(LIBVERSION)' == '' ">0.0.0-local</Version>
    <Version Condition=" '$(LIBVERSION)' != '' ">$(LIBVERSION)</Version>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="dotnet tool install -g MarkdownCodeEmbed || dotnet tool update -g MarkdownCodeEmbed&#xD;&#xA;mkdir ..\TMP&#xD;&#xA;MarkdownCodeEmbed --input ..\DocForCodeEmbed --code .. --output ..\TMP&#xD;&#xA;move /y ..\TMP\*.md ..&#xD;&#xA;rmdir ..\TMP" />
  </Target>

</Project>
